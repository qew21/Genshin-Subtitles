<Window x:Class="GI_Subtitles.HotkeyManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GI_Subtitles"
        mc:Ignorable="d"
        Title="快捷键设置" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="快捷键设置" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <ListView x:Name="hotkeyListView" Grid.Row="1" Margin="0,10,0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Description}" VerticalAlignment="Center" 
                                   FontSize="14"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                    Margin="10,0,10,0">
                            <CheckBox Content="Ctrl" IsChecked="{Binding IsCtrl}" 
                                      Margin="0,0,5,0" IsEnabled="True"/>
                            <CheckBox Content="Shift" IsChecked="{Binding IsShift}" 
                                      Margin="0,0,5,0" IsEnabled="True"/>
                            <ComboBox ItemsSource="{Binding AvailableKeys}" 
                                      SelectedItem="{Binding SelectedKey}"
                                      Width="60" IsEnabled="True"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存设置" x:Name="saveButton" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="恢复默认" x:Name="resetButton" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
