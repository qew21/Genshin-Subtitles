<Window x:Class="GI_Subtitles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GI_Subtitles"
        mc:Ignorable="d"
        WindowStyle="None" Height="20"  ShowInTaskbar="False" Topmost="True" Background="Transparent" AllowsTransparency="True" MouseDown="Window_MouseDown" Cursor="Hand">
    <Grid>
        <!-- Content always fixed at the center position,不受header影响 -->
        <TextBlock x:Name="SubtitleText" TextWrapping="Wrap" Foreground="White" 
                   TextAlignment="Center" FontWeight="Bold" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <!-- Header displayed above the content, centered display, using negative Margin to locate above the content -->
        <TextBlock x:Name="HeaderText" TextWrapping="Wrap" Foreground="White" 
                   TextAlignment="Center" FontWeight="Bold" FontSize="14" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="0,0,0,0" Visibility="Collapsed">
            <TextBlock.RenderTransform>
                <TranslateTransform Y="-20"/>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</Window>

